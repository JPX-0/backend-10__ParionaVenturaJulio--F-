<h1 class="title">Productos</h1>
<p class="text">¿Quieres agregar un nuevo producto?, da click <a href="/" class="link">Aqui</a></p>
{{#if pLength}} {{!-- por alguna razón no me dejaba usar el .length (? --}}
  <table class="table">
    <thead>
      <tr class="table__header">
        <th>Nombre</th>
        <th>Precio</th>
        <th>Foto</th>
      </tr>
    </thead>
    <tbody>
      {{#each products}}
        <tr class="table__main">
          <td>{{this.nombre}}</td>
          <td>${{this.precio}}</td>
          <td>
            <picture class="table__main-img">
              <img src={{this.foto}} alt={{this.nombre}}>
            </picture>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <h3 class="table__none">No hay productos</h3>
{{/if}}